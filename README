== SliceHost Setup ==
rpm -Uvh http://download.fedora.redhat.com/pub/epel/5/i386/epel-release-5-3.noarch.rpm
yum install ruby ruby-devel rubygems gcc git svn -t
gem install geminstaller
iptables -A INPUT -p tcp --dport 80 -j ACCEPT
service iptables save

== SliceHost Setup II ==
# rpm -Uvh http://download.fedora.redhat.com/pub/epel/5/i386/epel-release-5-3.noarch.rpm
# yum install ruby-devel rubygems gcc git svn -t
# cd /usr/local/src
# wget ftp://ftp.ruby-lang.org/pub/ruby/1.8/ruby-1.8.7.tar.gz
# tar xzvf ruby-1.8.7.tar.gz
# cd ruby-1.8.7
# ./configure && make
# sudo make install


iptables -A INPUT -p tcp --dport 80 -j ACCEPT
service iptables save
rpm -Uvh http://download.fedora.redhat.com/pub/epel/5/i386/epel-release-5-3.noarch.rpm
sudo yum groupinstall 'Development Tools'
sudo yum install readline-devel git svn -t

cd /usr/local/src
wget http://ftp.ruby-lang.org/pub/ruby/1.8/ruby-1.8.7.tar.gz
tar -zxvf ruby-1.8.7.tar.gz
cd ruby-1.8.7
./configure --with-openssl-dir=/usr/lib64/openssl
make
sudo make install

cd /usr/local/src
wget http://rubyforge.org/frs/download.php/69365/rubygems-1.3.6.tgz
tar -zxvf rubygems-1.3.6.tgz
cd rubygems-1.3.6
sudo ruby setup.rb

